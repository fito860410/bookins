{{template "base" .}}

{{define "content"}}
<div class="container">	  

    <div class="row">
      <div class="col">
        <h1>Make reservation</h1>

        <form method="post" class="needs-validation" novalidate>
          
          <div class="form-group mt-5">
            <label for="first_name">Nombre</label>
            <input type="text" name="first_name" required autocomplete="off" class="form-control">
          </div>

           <div class="form-group mt-5">
            <label for="last_name">Apellido</label>
            <input type="text" name="last_name" required autocomplete="off" class="form-control">
          </div>

           <div class="form-group mt-5">
            <label for="mail">Correo</label>
            <input type="text" name="phone" id="mail" required autocomplete="off" class="form-control">
          </div>

          <div class="form-group mt-5">
            <label for="phone">Phone number</label>
            <input type="text" name="phone" id="phone" required autocomplete="off" class="form-control">
          </div>

          <hr>

          <input type="submit" class="btn btn-primary" value="Make Reservation">

        </form>
      </div>
    </div>      
</div>
{{end}}