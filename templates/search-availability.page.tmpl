      </div>
    </div> 
    
    <div class="row">
      <div class="col">
        <p id="myParagraph" >This some text</p>
        <p>
          <button id="colorButton" class="btn btn-outline-secondary">Click Me</button>
        </p>
      </div>
    </div>

{{end}}