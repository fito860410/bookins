{{template "base" .}}

{{define "content"}}
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <h1 cla>Search for Availability</h1>

        <form action="/reservation" method="get" class="needs-validation" novalidate>

          <div class="row g-3 mb-3" id="foo">

